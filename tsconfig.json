{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2021",
    "module": "commonjs",
    "removeComments": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
}
}
